@{
    ViewData["Title"] = "Create";
}
@model TagPostDto
<div>
    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="Tag" class="btn btn-primary ">Back to Tags</a>

    </div>
</div>
<div class="row justify-content-center">
    <div class="card mb-4 col-lg-6">
        <div class="card-header">
            <h4>New Tag</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Tag">
                <div class="row justify-content-between">
                    <div class="col-lg-12">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" placeholder="Tag Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
