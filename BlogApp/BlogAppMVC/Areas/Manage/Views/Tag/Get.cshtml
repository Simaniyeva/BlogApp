@{
    ViewData["Title"] = "Get";
}
@model IDataResult<TagGetDto>
<div class="card mb-4">
    <div class="card-header bg-primary" style="height:150px">
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl col-lg">
                <h3>@Model.Data.Name</h3>
                <p><b> @Model.Data.Name </b> Taqındakı məqalə sayı: @Model.Data.BlogTags.Count</p>
            </div> <!--  col.// -->
            <div class="col-xl-6 text-md-end">
                @{
                    if (@Model.Data.isDeleted)
                    {
                        <div>
                            <a class="btn btn-light rounded font-md" asp-action="Update" asp-controller="Tag" asp-route-id="@Model.Data.Id">Redaktə et</a>
                            <a class="btn btn-light rounded  font-md" asp-action="Recover" asp-controller="Tag" asp-route-id="@Model.Data.Id">Bərpa et</a>
                            <a class="btn btn-danger rounded  font-md" asp-action="HardDelete" asp-controller="Tag" asp-route-id="@Model.Data.Id">Birdəfəlik sil</a>
                            <a href="#" class="btn btn-danger rounded font-md">Deaktiv</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a class="btn btn-light rounded font-md" asp-action="Update" asp-controller="Tag" asp-route-id="@Model.Data.Id">Redaktə et</a>
                            <a class="btn btn-danger rounded  font-md" asp-action="Delete" asp-controller="Tag" asp-route-id="@Model.Data.Id">Sil</a>
                            <a href="#" class="btn btn-primary btn-sm rounded">Aktiv</a>
                        </div>
                    }
                }
            </div> <!--  col.// -->
        </div> <!-- card-body.// -->
        <hr class="my-4">
    </div> <!--  card-body.// -->
</div> <!--  card.// -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Taq`ın məqalələri</h5>
        <div class="row">
            <div class="col-lg-12 col-xl-12">
                @{
                    List<BlogGetDto> blogs = new();
                    foreach (BlogTagGetDto blogTag in Model.Data.BlogTags)
                    {
                        blogs.Add(blogTag.Blog);
                    }
                }
                <partial name="_blogTablePartial" model="blogs" />

            </div> <!-- row.// -->
        </div>
    </div> <!--  card-body.// -->
</div>
<div>
    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="Tag" class="btn btn-primary ">Taqlara qayıt</a>
    </div>
</div>

