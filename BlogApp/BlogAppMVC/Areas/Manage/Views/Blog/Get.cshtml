@{
    ViewData["Title"] = "Get";
}
@model IDataResult<BlogGetDto>

<div class="content-header">
    <div>
        <h2 class="text-center">Details</h2>
    </div>
    <div>
        <div class="d-grid">
            <a asp-action="Index" asp-controller="Blog" class="btn btn-primary ">Back to blogs</a>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="card mb-2">
        <img class="rounded mx-auto d-block" style="width:15rem; margin-top:5px;" id="myImg" src="~/uploads/blog/@(Model.Data.BlogImages.FirstOrDefault().ImagePath)" alt="Product Image">
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Article Title</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.Title</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Description</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.Description</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Reading Time</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.ReadingTime</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">View Count</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.ViewCount</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Number of saves</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.SavedItems.Count()</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Status</p>
                            </div>
                            <div class="col-sm-9">
                                @{
                                    if (@Model.Data.isDeleted)
                                    {
                                        <a href="#" class="btn btn-danger rounded font-md">Deactive</a>

                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-primary btn-sm rounded">Active</a>

                                    }
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Created Date</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Data.CreatedDate</p>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


