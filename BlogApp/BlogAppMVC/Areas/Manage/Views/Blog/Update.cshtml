@{
    ViewData["Title"] = "Update";
}
@model BlogUpdateDto
<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <h4>Məqaləni redaktə et</h4>
            </div>
            <div class="card-body">
                <form asp-action="Update" asp-controller="Blog" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="mb-4">
                                <label asp-for="Title" class="form-label">Məqalə başlığı</label>
                                <input asp-for="Title" type="text" placeholder="Type here" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Description" class="form-label">Tam təsvir</label>
                                <textarea asp-for="Description" placeholder="Type here" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class="row">

                                <div class="col-lg-2">
                                    <div class="mb-4">
                                        <label class="form-label">Oxuma Müddəti</label>
                                        <div class="row gx-2">
                                            <input asp-for="ReadingTime" type="text" class="form-control">
                                            <span asp-validation-for="ReadingTime" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-4">
                                    <h5 class="mb-3">Taqlar</h5>
                                    <small class="text-muted font-sm mb-10">Çox seçim: Cmd+click</small>
                                    <select asp-for="TagIds" asp-items="ViewBag.Tags"></select>
                                </div>
                            </div>


                        </div>
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Media</h4>
                                </div>
                                <div class="card-body">
                                    <div class="input-upload">
                                        <img src="~/Manage/assets/imgs/theme/upload.svg" alt="">
                                        <input asp-for="formFiles" class="form-control" type="file" multiple>
                                        <span asp-validation-for="formFiles" class="text-danger"></span>

                                    </div>
                                </div>
                            </div> <!-- card end// -->
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Yenilə</button>
                    </div>
                </form>
            </div>
        </div> <!-- card end// -->
    </div>
</div>




