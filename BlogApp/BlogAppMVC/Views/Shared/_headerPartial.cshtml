                    {
                        <a asp-action="Profile" asp-controller="Account" class="nav-link"> <i class="fa-regular fa-user"></i></a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account" class="nav-link"> <i class="fa-regular fa-user"></i></a>

                    }

                </li>
